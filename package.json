{
  "name": "linktrader",
  "version": "0.0.1",
  "homepage": "https://github.com/developerjake/linktrader#readme",
  "private": true,
  "license": "TBC",
  "author": {
    "name": "developerjake",
    "email": "contactjake@developerjake.com",
    "url": "http://developerjake.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/developerjake/"
  },
  "bugs": {
    "url": "https://github.com/developerjake/<projectname>/issues"
  },
  "scripts": {
    "build": "tsc",
    "serve": "ts-node -r tsconfig-paths/register src/app.ts",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "start": "concurrently --kill-others -c \"yellow.bold,cyan.bold,green.bold\" \"tsc -w\" \"yarn dev\"",
    "test": "jest"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "koa": "2.5.1",
    "koa-bodyparser": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa-router": "7.4.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.22",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.40",
    "@types/node": "14.14.25",
    "concurrently": "^4.1.0",
    "eslint": "7.19.0",
    "jest": "26.6.3",
    "nodemon": "^1.18.10",
    "ts-jest": "26.5.0",
    "ts-node": "10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "./"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "./node_modules/*"
    ],
    "testMatch": [
      "**/?(*.)+(spec).[jt]s?(x)"
    ],
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/$1",
      "@root/(.*)": "<rootDir>/$1",
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "allowJs": true
        }
      }
    }
  }
}
