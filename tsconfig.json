{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@app/*": ["src/*"],
      "@root/*": ["*"]
    },
    "resolveJsonModule": true,
    "strict": false,
    "target": "es2020",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"]
}
